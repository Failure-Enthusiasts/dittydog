{
  "family": "dittydog",
  "networkMode": "awsvpc",
  "taskRoleArn": "",
  "executionRoleArn": "e",
  "containerDefinitions": [
    {
      "name": "spotify-backend",
      "image": "public.ecr.aws/b1o7r7e0/be-dittydog:10-16-23",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "FLASK_APP",
          "value": "backend.py"
        },
        {
          "name": "FLASK_ENV",
          "value": "development"
        },
        {
          "name": "FLASK_DEBUG",  
          "value": "1"
        },
        {
          "name": "FLASK_RUN_PORT",
          "value": "8080"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://localhost:6385"
        },
        {
          "name": "MIDDLEWARE_URL",
          "value": "http://localhost:4001"
        },
        {
          "name": "ECS_Fargate",
          "value": "True"
        },
        {
          "name": "FRONTEND_DOMAIN",
          "value": "<UPDATE_ME>"
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "/ecs/cahillsf-ecs-fargate",
            "awslogs-region": "ap-northeast-2",
            "awslogs-stream-prefix": "dittydog"
        }
      }
    },
    {
      "name": "middleware-server",
      "image": "public.ecr.aws/b1o7r7e0/mw-dittydog:7-17-23",
      "cpu": 100,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 4001,
          "hostPort": 4001
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "/ecs/cahillsf-ecs-fargate",
            "awslogs-region": "ap-northeast-2",
            "awslogs-stream-prefix": "dittydog"
        }
      }
    },
    {
      "name": "redis",
      "image": "redis:alpine",
      "cpu": 100,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 6385,
          "hostPort": 6385
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "/ecs/cahillsf-ecs-fargate",
            "awslogs-region": "ap-northeast-2",
            "awslogs-stream-prefix": "dittydog"
        }
      }
    },
    {
      "name": "dittydog-frontend",
      "image": "public.ecr.aws/b1o7r7e0/fe-dittydog:8-14-23",
      "cpu": 100,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "/ecs/cahillsf-ecs-fargate",
            "awslogs-region": "ap-northeast-2",
            "awslogs-stream-prefix": "dittydog"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "EC2",
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024"
}