{
  "family": "dittydog",
  "networkMode": "awsvpc",
  "taskRoleArn": "",
  "executionRoleArn": "",
  "containerDefinitions": [
    {
      "name": "spotify-backend",
      "image": "docker.io/bradleyjay/spotify-backend:aws_test_deploy3",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "FLASK_APP",
          "value": "backend.py"
        },
        {
          "name": "FLASK_ENV",
          "value": "development"
        },
        {
          "name": "FLASK_DEBUG",  
          "value": "1"
        },
        {
          "name": "FLASK_RUN_PORT",
          "value": "8080"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://localhost:6385"
        },
        {
          "name": "MIDDLEWARE_URL",
          "value": "http://localhost:4001"
        },
        {
          "name": "ECS_Fargate",
          "value": "True"
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "/ecs/cahillsf-ecs-fargate",
            "awslogs-region": "ap-northeast-2",
            "awslogs-stream-prefix": "dittydog"
        }
      }
    },
    {
      "name": "middleware-server",
      "image": "docker.io/bradleyjay/spotify-middleware:aws_test_deploy",
      "cpu": 100,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 4001,
          "hostPort": 4001
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "/ecs/cahillsf-ecs-fargate",
            "awslogs-region": "ap-northeast-2",
            "awslogs-stream-prefix": "dittydog"
        }
      }
    },
    {
      "name": "redis",
      "image": "redis:alpine",
      "cpu": 100,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 6385,
          "hostPort": 6385
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "/ecs/cahillsf-ecs-fargate",
            "awslogs-region": "ap-northeast-2",
            "awslogs-stream-prefix": "dittydog"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "EC2",
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}